

<% if @model == 'user' %>
  <h1>Users</h1>
    <table class="table">
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th colspan="1"></th>
		</tr>
	</thead>
	<tbody>
	<% @datas.each do |user| %>
      <tr>
      	<td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg" %>
        <td><%= user.name %></td>
        <td><%= link_to "show", user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
<% elsif @model == 'book' %>
  <h1>Books</h1>
		<!--books一覧 -->
	<table class="table table-hover table-inverse">
	<thead>
	  <tr>
		<th></th>
		<th>Title</th>
		<th>Opinion</th>
		<th colspan="1"></th>
	  </tr>
	</thead>
	<tbody>
	  <% @datas.each do |book| %>
		<tr>
		  <td>
			<%= link_to user_path(book.user_id) do %>
			  <%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
			<% end %>
		  </td>
		  <td><%= link_to book.title, book_path(book.id), class: "book_#{book.id}" %></td>
		  <td><%= book.body %></td>
		  <td><%= link_to "Show", book_path(book) %></td>
		</tr>
	  <% end %>
	</tbody>
    </table>
<% end %>