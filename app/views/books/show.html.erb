<div class="container">
<div class="row">
	<div class="col-xs-3">

		
		<%= render 'users/profile', book: @book, user: @user %>
        <%= render 'relationships/follow_button', user: @user %>
		<h2>New book</h2>
		<%= render 'books/newform', book: Book.new %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>
		<% if @book_comment.errors.any? %>
          <div id="error_explanation" class="alert alert-danger">
          <%= pluralize(@book_comment.errors.count, "error")%> prohibited this odj from being saved:
            <ul>
  	           <% @book_comment.errors.full_messages.each do |message| %>
  	           <li><%= message %></li>
  	           <% end %>
            </ul>
          </div>
        <% end %>

		<table class="table">
				<tr>
					<td>
						<%= link_to book_path(@user.id) do %>
						<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
						<%= link_to @user.name, user_path(@user.id) %>
						<% end %>
					</td>
					<td><%= link_to @book.title, book_path(@book.id) %></td>
					<td><%= @book.body %></td>
					<td>
						<% if @user == current_user %>
						<%= link_to "Edit",edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %>
                        <% end %>
                    </td>
					<td>
						<% if @user == current_user %>
						<%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %>
					    <% end %>
					</td>
					<td>
					  <div id="favorites_<%= @book.id %>">
					    <%= render partial: 'favorites/favorite', locals: { book: @book} %>
					  </div>
					<td>
					  <%= @book.book_comments.count %>件コメント
					</td>
				</tr>
			</table>
			<div id="comments_area">
			  <%= render 'book_comments/index', book: @book %>
            </div>
			<% if user_signed_in? %>
			  <%= render 'book_comments/form', book: @book %>
			<% end %>
        </div>
	</div>
</div>

