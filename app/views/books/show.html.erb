<div class="container">
<div class="row">
	<div class="col-xs-3">

		
		<%= render 'users/profile', book: @book, user: @user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to book_path(@user.id) do %>
						<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
						<%= link_to @user.name, user_path(@user.id) %>
						<% end %>
					</td>
					<td><%= link_to @book.title, book_path(@book.id) %></td>
					<td><%= @book.body %></td>
					<td>
						<% if @user == current_user %>
						<%= link_to "Edit",edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %>
                        <% end %>
                    </td>
					<td>
						<% if @user == current_user %>
						<%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %>
					<% end %>
					</td>
				</tr>
			</table>
        </div>
	</div>
</div>

