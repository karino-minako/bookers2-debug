
   <table class="table table-hover table-inverse">
			<thead>
				<tr>
				  <th>name</th>
				  <th>comment</th>
				  <th></th>
				</tr>
			</thead>
			<tbody>
				<% book.book_comments.each do |book_comment| %>
				<% unless book_comment.id.nil? %>
				<tr>
					<td><%= book_comment.user.name %></td>
			        <td><%= book_comment.comment %></td>
			        <td>
			          <% if book_comment.user_id == current_user.id %>
			            <%= link_to "destroy", book_book_comment_path(book.id,book_comment.id), method: :delete, remote: true %>
			          <% end %>
			        </td>
			    </tr>
			    <% end %>
			    <% end %>
		    </tbody>
		    </table>