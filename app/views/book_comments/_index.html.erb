
   <table class="table table-hover table-inverse">
			<thead>
				<tr>
				  <th>name</th>
				  <th>comment</th>
				  <th></th>
				</tr>
			</thead>
			<tbody>
				<% book.book_comments.each do |book_comment| %>
				<% unless book_comment.id.nil? %>
				<tr>
					<td>
      <%= link_to user_path(book_comment.user), class: "user_#{book_comment.user.id}" do %>
        <%= attachment_image_tag book_comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50" %><br>
        <%= book_comment.user.name %>
      <% end %>
    </td>
			        <td><%= book_comment.comment %></td>
			        <td>
			          <% if book_comment.user_id == current_user.id %>
			            <%= link_to "destroy", book_book_comment_path(book.id,book_comment.id), class: 'btn-sm btn-danger',method: :delete, remote: true %>
			          <% end %>
			        </td>
			    </tr>
			    <% end %>
			    <% end %>
		    </tbody>
		    </table>