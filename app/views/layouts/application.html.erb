<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!--ヘッダーの記述-->
    <<header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">

        <nav class="nav navbar-nav navbar-left">
          <span>Bookers</span>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <!--if文でサインインとアウト時の表示を変更-->
            <% if user_signed_in? %>
            <li>
              <%= link_to user_path(current_user.id) do %>
              <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
              Home
              <% end %>
            </li>
            <li>
              <%= link_to users_path do %>
              <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
              Users
              <% end %>
            </li>
            <li>
              <%= link_to books_path do %>
              <span class="glyphicon glyphicon-book" aria-hidden="true"></span>
              Books
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
              <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
              logout
              <% end %>
            </li>
            <% else %>
            <li>
              <%= link_to root_path do %>
              <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
              Home
              <% end %>
            </li>
            <li>
              <%= link_to home_about_path do %>
              <span class="glyphicon glyphicon-link" aria-hidden="true"></span>
              About
              <% end %>
            </li>
            <li>
              <%= link_to new_user_registration_path do %>
              <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
              sign up
              <% end %>
            </li>
            <li>
              <%= link_to new_user_session_path do %>
              <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
              login
              <% end %>
            </li>
            <% end %>
          </ul>
        </nav>
        
      </div>
    </header>
    <div class="container">
    <div class="row">
    <div class="main col-md-offset-3 col-md-6">
    <% if user_signed_in? %>
          <div class="search-form">
            <%= form_tag(search_path, method: :get) do %>
              <%= text_field_tag 'search[content]' %>
              <%= select_tag 'search[model]', options_for_select({ "User" => "user", "Book" => "book" }) %>
              <%= select_tag 'search[how]', options_for_select({ "完全一致" => "match", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partical" }) %>
              <%= submit_tag '検索', class: "btn btn-primary" %>
            <% end %>
          </div>
        <% end %>
    </div>
    </div>
    </div>
    <!--ヘッダーの記述-->
<main>
  <%= yield %>
</main>
    <footer>
      <div class="container">
        <div class="row">
          <div class="col-xs-3 col-xs-offset-9">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
